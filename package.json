{
  "name": "@mikashboks/mtn-momo",
  "version": "0.3.0",
  "description": "MTN Mobile Money API Client for NodeJS written in TypeScript",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -r ./dist",
    "compile": "tsc -p tsconfig.json",
    "lint": "tslint --project tsconfig.json --config tslint.json \"{src,test}/**/*.ts\"",
    "test": "mocha -r ts-node/register 'test/**/*.ts'"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "examples"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "keywords": [
    "MTN",
    "Mobile",
    "Money",
    "Momo",
    "TypeScript",
    "NodeJS"
  ],
  "bin": {
    "momo-sandbox": "./lib/cli.js"
  },
  "license": "ISC",
  "dependencies": {
    "axios": "^1.5.0",
    "commander": "^11.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.11.12",
    "@types/sinon": "^10.0.16",
    "@types/uuid": "^9.0.4",
    "axios-mock-adapter": "^1.22.0",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.1.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "mocha": "^9.1.3",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "sinon": "^12.0.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.3"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikashboks/momoapi-node.git"
  },
  "bugs": {
    "url": "https://github.com/mikashboks/momoapi-node/issues"
  },
  "homepage": "https://github.com/mikashboks/momoapi-node#readme"
}
